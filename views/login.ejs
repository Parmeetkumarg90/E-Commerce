<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Login Page</title>
  <style>
    /* Reset and base styles */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap');

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: 'Inter', sans-serif;
  color: #1f2937;
  transition: 0.3s all;
  text-align: center;
}

body {
  min-height: 100vh;
  background: #f3f4f6; /* Light gray background */
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 2rem;
}

.login-container {
  background: #ffffff;
  padding: 2rem;
  border-radius: 12px;
  width: 100%;
  max-width: 350px;
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
  text-align: center;
}

.login-container:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
}

.login-container h2 {
  margin-bottom: 1.5rem;
  color: #1f2937;
  font-size: 1.5rem;
  font-weight: 700;
}

.login-container input {
  width: 100%;
  padding: 0.75rem;
  margin: 0.5rem 0;
  border: 1px solid #d1d5db;
  border-radius: 10px;
  font-size: 1rem;
  background: #ffffff;
  color: #111827;
}

.login-container input:focus {
  border-color: #3B82F6;
  outline: none;
}

.login-container button {
  width: 100%;
  padding: 0.8rem;
  margin-top: 1rem;
  background: #3B82F6;
  border: 2px solid transparent;
  border-radius: 10px;
  color: #ffffff;
  font-weight: 600;
  font-size: 1rem;
  cursor: pointer;
}

.login-container button:hover {
  background: #2563eb;
  border-color: #93c5fd;
  transform: translateY(-2px);
}

#error-message {
  color: #e11d48;
  margin-top: 1rem;
  font-size: 0.9rem;
}

a.button-like {
  display: inline-block;
  padding: 0.75rem 1.25rem;
  margin: 0.75rem 0.5rem;
  background: #3B82F6;
  color: #ffffff;
  text-decoration: none;
  border: 2px solid transparent;
  border-radius: 8px;
  font-size: 1rem;
  font-weight: 600;
  transition: background 0.3s ease, transform 0.2s ease;
}

a.button-like:hover {
  background: #2563eb;
  transform: translateY(-2px);
}

a.button-like:active {
  transform: translateY(0);
}

.radio-group {
  margin: 1rem 0;
  display: flex;
  gap: 20px;
  flex-wrap: wrap;
  justify-content: center;
}

.radio-group label {
  cursor: pointer;
  font-weight: 600;
  color: #1f2937;
  display: flex;
  align-items: center;
}

.radio-group input[type="radio"] {
  margin-right: 6px;
  cursor: pointer;
}

/* Responsive Tweaks */
@media (max-width: 400px) {
  .login-container {
    padding: 1.5rem;
  }

  .login-container h2 {
    font-size: 1.25rem;
  }

  .radio-group {
    gap: 10px;
  }

  .radio-group label {
    font-size: 0.9rem;
  }
}

  </style>
</head>

<body>
  <div class="login-container">
    <h2>Login</h2>
    <form id="loginForm" method="post" action="/auth/login">

      <div class="radio-group">
        <label>
          <input type="radio" name="role" value="User" checked/>
          <span class="custom-radio"></span>
          User
        </label>
        <label>
          <input type="radio" name="role" value="Seller" />
          <span class="custom-radio"></span>
          Seller
        </label>
      </div>

      <input type="text" id="email" name="email" placeholder="EMAIL" required>
      <input type="password" id="password" name="password" placeholder="Password" required>
      <button type="submit">Login</button>
      <a href="/auth/signup" class="button-like">Create Account</a>
    </form>
    <% if (errorCreated) { %>
      <p id="error-message">
        <%= errorCreated %>
      </p>
      <% } else { %>
        <p id="error-message"></p>
        <% } %>
  </div>

</body>

</html>